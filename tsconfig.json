{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "target": "es5",
    "module": "esnext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "@api": ["src/api/index"],
      "@components": ["src/components"],
      "@screens/*": ["src/screens/*"],
      "@constants": ["src/constants"],
      "@hooks/*": ["src/hooks/*"],
      "@types": ["src/types"],
      "@utils": ["src/utils"]
    }
  }
}
